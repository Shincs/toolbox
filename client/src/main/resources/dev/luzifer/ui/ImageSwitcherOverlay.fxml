<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<fx:root type="javafx.scene.layout.StackPane"
         maxHeight="-Infinity"
         maxWidth="-Infinity"
         minHeight="-Infinity"
         minWidth="-Infinity"
         prefHeight="400.0"
         prefWidth="600.0"
         pickOnBounds="false"
         xmlns="http://javafx.com/javafx/18"
         xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane pickOnBounds="false" prefHeight="400.0" prefWidth="600.0">
         <ImageView fx:id="imageView" fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" smooth="true"/>
      </AnchorPane>
      <Button fx:id="buttonNext" mnemonicParsing="false" translateX="250.0" translateY="170.0" />
      <Button fx:id="buttonPrevious" mnemonicParsing="false" translateX="-250.0" translateY="170.0" />
      <Label fx:id="dropVisualizer" alignment="CENTER" prefHeight="80.0" prefWidth="400.0" text="Drop Images here..." textFill="#c0bcbc">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
   </children>
</fx:root>
